<p style="color: green"><%= notice %></p>


<p>
    <strong>Product ID:</strong>
    <%= @product.id %>
</p>

<%= render @product %>

<div>


  <%= link_to "Edit this product", edit_product_path(@product) %> 
  <%= button_to "Add to Cart", line_items_path(product_id: @product), method: :post %> 
  <%= link_to "See More", products_path %>


  <%= button_to "Destroy this product", @product, method: :delete %>
</div>

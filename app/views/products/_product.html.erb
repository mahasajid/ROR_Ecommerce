<div id="<%= dom_id product %>">

<div class = "card">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

  <p>
    <% if product.image.attached? %>
<%= image_tag(product.image.variant(resize_to_limit: [100,100]) ) %>
<% end %>
 </p>

 </div>

</div>

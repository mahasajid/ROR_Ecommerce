<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">

  <% @products.each do |product| %>
  <% cache product do %>
    <%= render product %>
    <% end %>
    <button>
      <%= link_to "Select", product %>
    </button>
  
  <%end%>
</div>
<%= paginate @products %>
<%= link_to "New product", new_product_path %>
